<Window
	x:Class="FutbolChallengeApp.ParticipantManagement"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:view="using:FutbolChallengeUI.Controls"
	mc:Ignorable="d"
>
	<StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
				Margin="5,5,5,5"
				MaxWidth="1600"
				>
		<StackPanel Margin="10,20,10,20" Padding="5,5,5,5" >
			<view:ParticipantListView  x:Name="participantView" BorderBrush="Pink" BorderThickness="4"
									   ParticipantListViewModel="{x:Bind Path=ParticipantListViewModel}"
								   VerticalAlignment="Top" />
			<view:ParticipantPanelView Mode="Add" EnableTextEditing="True" ShowEdit="False" 
								   Margin="15" Padding="5,0" x:Name="participantAddView" 
								    VerticalAlignment="Bottom" HorizontalAlignment="Left"  />
		</StackPanel>
		<Button	VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Close" Margin="0,0,20,30"  Click="CloseButton_Click"/>
	</StackPanel>
</Window>
